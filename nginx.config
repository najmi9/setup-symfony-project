server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /usr/share/nginx/html/symfony/public;

    # Add index.php to the list if you are using PHP
    index index.php;

    location / {
        # First attempt to serve request as file, then fallback to index.php
        try_files $uri /index.php$is_args$args;
    }

    location ~ ^/index\.php(/|$) {
        fastcgi_pass unix:/run/php/php8.2-fpm.sock; # Change this to your PHP-FPM socket path
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;
    }

    # Serve static files directly
    location ~ \.(gif|jpg|jpeg|png|svg|js|css|mp3|ogg|mpe?g|avi|mp4|mov|webm|swf)$ {
        expires 30d;
        add_header Pragma public;
        add_header Cache-Control "public";
        access_log off;
    }

    # Deny access to . files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
